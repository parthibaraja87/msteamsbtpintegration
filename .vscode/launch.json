{
  "inputs": [
    {
      "id": "UI5MinVersion1.65.0",
      "type": "command",
      "command": "sap.ux.appGenerator.ui5Version",
      "args": {
        "minUI5Version": "1.65.0"
      }
    }
  ],
  "configurations": [
    {
      "name": "Attach to server",
      "type": "pwa-node",
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "restart": true,
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "Launch client (Edge)",
      "type": "pwa-msedge",
      "request": "launch",
      "url": "https://teams.microsoft.com/",
      "outFiles": [
        "${workspaceFolder}/dist/web/**/*.js",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "Launch client (Chrome)",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "https://teams.microsoft.com/",
      "outFiles": [
        "${workspaceFolder}/dist/web/**/*.js",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "Start project1",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npx",
      "cwd": "${workspaceFolder}/project1",
      "windows": {
        "runtimeExecutable": "npx.cmd"
      },
      "runtimeArgs": [
        "fiori",
        "run"
      ],
      "args": [
        "--open",
        "test/flpSandbox.html?sap-ui-xx-viewCache=false#project1-display"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229,
      "env": {
        "DEBUG": "--inspect",
        "run.config": "{\"handlerId\":\"fiori_tools\",\"runnableId\":\"/home/user/projects/msteamsapproval/project1\"}"
      }
    },
    {
      "name": "Start project1 Mock",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/project1",
      "runtimeExecutable": "npx",
      "windows": {
        "runtimeExecutable": "npx.cmd"
      },
      "runtimeArgs": [
        "fiori",
        "run"
      ],
      "args": [
        "--config",
        "./ui5-mock.yaml",
        "--open",
        "test/flpSandbox.html?sap-ui-xx-viewCache=false#project1-display"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229,
      "env": {
        "run.config": "{\"handlerId\":\"fiori_tools\",\"runnableId\":\"/home/user/projects/msteamsapproval/project1\"}"
      }
    },
    {
      "name": "Start project1 Local",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/project1",
      "runtimeExecutable": "npx",
      "windows": {
        "runtimeExecutable": "npx.cmd"
      },
      "runtimeArgs": [
        "fiori",
        "run"
      ],
      "args": [
        "--config",
        "./ui5-local.yaml",
        "--open",
        "test/flpSandbox.html?sap-ui-xx-viewCache=false#project1-display"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229,
      "env": {
        "run.config": "{\"handlerId\":\"fiori_tools\",\"runnableId\":\"/home/user/projects/msteamsapproval/project1\"}"
      }
    }
  ],
  "compounds": [
    {
      "name": "Debug (Edge)",
      "configurations": [
        "Attach to server",
        "Launch client (Edge)"
      ],
      "presentation": {
        "group": "all",
        "order": 1
      },
      "stopAll": true
    },
    {
      "name": "Debug (Chrome)",
      "configurations": [
        "Attach to server",
        "Launch client (Chrome)"
      ],
      "presentation": {
        "group": "all",
        "order": 2
      },
      "stopAll": true
    }
  ],
  "version": "0.2.0"
}